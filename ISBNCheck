function doISBNCheckDigit(checkNum, modNum){
	var isCorrect = false;
	var checkDigit = 0;
	var strLen = checkNum.length;
	var sum = 0;
	var i = 0;
	
	for (i=0;i+1<strLen - 1;i++){
		sum = sum + ((parseInt(checkNum.charAt(i+1)) * (strLen - i)));
	}
	
	checkDigit = Mod - (sum % Mod);
	
	if (parseInt(checkNum.charAt(strLen)) == checkDigit){
		isCorrect = true;
		}
	return isCorrect;
}
